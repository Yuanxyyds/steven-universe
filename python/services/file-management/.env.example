# === LXC Deployment Configuration (for deploy.sh script) ===
# Configure SSH host in ~/.ssh/config first, then use the host alias here
LXC_HOST=lxc-host-alias

# === MinIO Configuration (internal network) ===
MINIO_ENDPOINT=192.168.x.x:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_SECURE=false

# === Public Service URL (Cloudflare Tunnel or public domain) ===
PUBLIC_SERVICE_URL=https://files.yourdomain.com

# Streaming Upload Configuration
MAX_BUFFERED_CHUNKS: int = 50

# === Authentication ===
# Generate strong random keys: openssl rand -base64 32
INTERNAL_SECRET_KEY=your-internal-secret-key-here
FRONTEND_API_KEY=your-frontend-api-key-here

# === Signed URL Configuration ===
DEFAULT_SIGNED_URL_EXPIRATION=3600
MAX_SIGNED_URL_EXPIRATION=86400

# === Application ===
LOG_LEVEL=INFO
